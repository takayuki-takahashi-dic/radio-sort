= render partial: 'radios/sidenav_radio_search', locals: {radio: @radios, q: @q}
.container style="max-width: 500px;"
  .title-text アカウント登録
  br
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .input-field
      = f.label :email
      br
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .input-field
      = f.label :"パスワード(#{@minimum_password_length}文字以上)"
      br
      = f.password_field :password, autocomplete: "new-password"
    .input-field
      = f.label :password_confirmation
      br
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = button_tag type: 'submit', class: 'btn waves-effect waves-light login', value: "save" do
        i.material-icons.right person_add
        |登録
  = render "devise/shared/links"
